{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "üßπ Clean Build Directory",
          "type": "shell",
          "command": "make",
          "args": [
              "clean"
          ],
          "options": {
              "cwd": "${workspaceFolder}"
          },
          "problemMatcher": [],
          "group": {
              "kind": "build",
              "isDefault": false
          }
      },
      {
          "label": "üõ†Ô∏è Build Entire Project (debug)",
          "type": "shell",
          "command": "make",
          "args": [
              "all",
              "MODE=debug"
          ],
          "options": {
              "cwd": "${workspaceFolder}"
          },
          "problemMatcher": [
            {
              "owner": "cpp",
              "fileLocation": ["relative", "${workspaceFolder}"],
              "pattern": {
                "regexp": "^(.*):(\\d+):(\\d+): (warning|error): (.*)$",
                "file": 1,
                "line": 2,
                "column": 3,
                "severity": 4,
                "message": 5
              }
            }
          ],
          "group": {
              "kind": "build",
              "isDefault": false
          },
          "detail": "Builds the entire project in debug mode (-g -O0)"
      },
      {
