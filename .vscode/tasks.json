{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean Build Directory",
            "type": "shell",
            "command": "make",
            "args": ["clean"],
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "C:\\msys64\\mingw64.exe"
                }
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Build Entire Project",
            "type": "shell",
            "command": "make",
            "args": ["all"],
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Builds the entire project using Makefile and g++"
        },
        {
            "label": "Build Active File",
            "type": "shell",
            "command": "make",
            "args": [
                "active",
                "SINGLE_SRC=${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Builds the currently active .cpp file using Makefile and g++"
        }
    ]
}
