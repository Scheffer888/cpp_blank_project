{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üßπ Clean Build Directory",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "üõ†Ô∏è Build Entire Project (debug)",
            "type": "shell",
            "command": "make",
            "args": [
                "all",
                "MODE=debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Builds the entire project in debug mode (-g -O0)"
        },
        {
            "label": "Build Entire Project (release)",
            "type": "shell",
            "command": "make",
            "args": [
