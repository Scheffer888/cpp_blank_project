      {
        "label": "ü©∫ Profile Active File (Line Profiler)",
        "command": "conda",
        "args": [
          "run",
          "-n",
          "data_analysis",
          "kernprof",
          "-l",
          "-v",
          "${file}"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [],
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "shared"
        }
      },
      {
        "label": "ü©∫ Profile Active File (cProfile)",
        "type": "shell",
        "command": "conda",
        "args": [
          "run",
          "-n",
          "data_analysis",
          "python",
          "-m",
          "cProfile",
          "-s",
