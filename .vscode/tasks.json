{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üßπ Clean Build Directory",
            "type": "shell",
            "command": "make",
            "args": ["clean"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "üõ†Ô∏è Build Entire Project (debug)",
            "type": "shell",
            "command": "make",
            "args": ["all", "MODE=debug"],
            "options": {
              "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
              "kind": "build",
              "isDefault": false
            },
            "detail": "Builds the entire project in debug mode (-g -O0)"
        },          
        {
            "label": "Build Entire Project (release)",
            "type": "shell",
            "command": "make",
            "args": ["all", "MODE=release"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Builds the entire project in release mode"
        },
        {
            "label": "üõ†Ô∏è Build Entire Project (fast)",
            "type": "shell",
            "command": "make",
            "args": ["all", "MODE=fast"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "Builds the project with -O3 and march=native"
        },
        {
            "label": "üõ†Ô∏è Build Active File (debug)",
            "type": "shell",
            "command": "make",
            "args": [
                "active",
                "MODE=debug",
                "SINGLE_SRC=${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Builds the currently active .cpp file in debug mode"
        },
        {
            "label": "üõ†Ô∏è Build Active File (dev)",
            "type": "shell",
            "command": "make",
            "args": [
                "active",
                "MODE=dev",
                "SINGLE_SRC=${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "Builds the currently active .cpp file in dev mode (-O1)"
        },
        {
            "label": "üõ†Ô∏è Build Active File (release)",
            "type": "shell",
            "command": "make",
            "args": [
                "active",
                "MODE=release",
                "SINGLE_SRC=${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "Builds the currently active .cpp file in release mode (-O2)"
        },
        {
            "label": "üõ†Ô∏è Build Active File (fast)",
            "type": "shell",
            "command": "make",
            "args": [
                "active",
                "MODE=fast",
                "SINGLE_SRC=${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "Builds the currently active .cpp file in fast mode (-O3 -march=native)"
        }
    ]
}
